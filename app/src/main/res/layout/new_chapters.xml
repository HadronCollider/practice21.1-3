<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newChapters"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/newChaptersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Chapters"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
    <TextView
        android:id="@+id/newChaptersCheckBoxContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only my bookmarks" />
    <CheckBox
        android:id="@+id/newChaptersOnlyMyBookmarksCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newChaptersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>